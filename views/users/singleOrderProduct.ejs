    const returnBtn = document.getElementById('returnBtn');

function returReason(orderId, productId) {
  const returnReason = document.getElementById('returnReason').value;
  console.log("orderId," ,orderId, "productId",productId);
  const data = {
    orderId: orderId,
    productId: productId,
    returnReason: returnReason
  };
  console.log("data");

  fetch('/return-reason', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json'
    },
    body: JSON.stringify(data)
  }).then((response) => {
    return response.json(); // Parse the JSON response
  }).then((data) => {
    if (data.reason) {
        window.location.reload()
      
      // Remove the "Return" button from the DOM
      returnBtn.remove();
    }
  }).catch((error) => {
    console.error('Error:', error);
  });
}
// product cancel function
        function cancelorder(orderId, productId) {
            console.log('Cancel Order:', { orderId, productId });
        
            const cancelReason = document.getElementById('cancelReason').value
            console.log(cancelReason);    const data = {
                orderId: orderId,
                productId: productId,
                cancellationReason : cancelReason
            };

            fetch('/cancel-product', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            }).then((response) => {
                console.log('Response Status:', response.status);

                if (response.ok) {
                    return response.json();
                } else {
                    throw new Error(`Http error! status: ${response.status}`);
                }
            }).then((data) => {
                console.log('Response Data:', data);

                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        text: 'Product successfully canceled'
                    }).then(() => {
                        window.location.reload()
                    })
                } else {
                    Swal.fire({
                        icon: 'error',
                        text: 'Failed to cancel product'
                    });
                }
            }).catch((error) => {
                console.error('Error:', error);
            });
        }

