        const handleSortChange = () => {
          const sortOrder = document.getElementById('sortbyPrice').value; // 'increasing' or 'decreasing'
          const currentUrl = new URL(window.location.href);

          // Toggle between sorting options
          if (sortOrder === 'increasing') {
            currentUrl.searchParams.set('sort', 'increasing');
          } else {
            currentUrl.searchParams.set('sort', 'decreasing');
          }

          window.location.href = currentUrl.toString();
        };

        // Add event listener to handle sorting option change
        document.getElementById('sortbyPrice').addEventListener('change', handleSortChange);

        // Optional: Set initial selected option based on URL parameter
        const urlParams = new URLSearchParams(window.location.search);
        const sortParam = urlParams.get('sort');
        if (sortParam === 'decreasing') {
          document.getElementById('sortbyPrice').value = 'decreasing';
        }
      </script>

