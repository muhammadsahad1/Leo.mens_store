<%- include('../layouts/user/header.ejs') -%>



<style>
  body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 20px;
  }
  .invoice {
      max-width: 800px;
      margin: 0 auto;
      border: 1px solid #ccc;
      padding: 20px;
      background-color: #f9f9f9;
  }
  .invoice-header {
      text-align: center;
      margin-bottom: 20px;
  }
  .invoice-body {
      margin-bottom: 20px;
  }
  table {
      width: 100%;
      border-collapse: collapse;
  }
  th, td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
  }
  th {
      background-color: #f2f2f2;
  }
  .invoice-total {
      font-weight: bold;
  }

        /* Custom styles for the invoice header */
        .invoice-header {
            background-color: #343a40;
            color: #ffffff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .invoice-header h2 {
            margin-top: 0;
            font-weight: 700;
        }

        .download-btn {
            background-color: #007bff;
            color: #ffffff;
            border: none;
            border-radius: 3px;
            padding: 8px 16px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .download-btn:hover {
            background-color: #0056b3;
        }
    </style>


</head>
<body>
<div class="invoice">
  <div class="invoice-body" style="background-color: rgb(231, 224, 224);">
    
    
    <%console.log(Order)%>
      <h4>Bill To: <%=Order.userId.name%>  </h4>
      <p> LEO Fashion <br>
        Your Address<br>
        <%=deliveryAddress%><br>
        Email: <%=Order.userId.email%><br>
        Phone: <%=Order.userId.mobile%><br>
      </p>
    <hr>

    <h4>Invoice Details:</h4>
    <p>Invoice Number: 123456<br>
        Invoice Date: February 10, 2024
    </p>
    <div class="invoice-body">
      <table>
          <tr>
              <th>product name</th>
              <th>Quantity</th>
              <th>Unit Price</th>
              <th>Total</th>
          </tr>
          
          <% let totalAmount = 0; %> 
         
        <%console.log(order.productsId.name )%>
            <% if (order.status === 'delivered') { %>
                <tr>
                    <td><%= product.name %></td>
                    <td><%= order.quantity %></td>
                    <td>$ <%= product.price %></td>
                    <% const total = product.price * order.quantity; %>
                    <% totalAmount += total; %> 
                    <td>$ <%= total %></td>
                </tr>
            <% } %>
    
              

          <!-- End of invoice items loop -->
      </table>
  </div>
  <div class="invoice-total">
      <p>Total Amount: $ <%= totalAmount %></p>
  </div>


