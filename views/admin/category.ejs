        <script>
            function listUnlist(categoryId) {

                const catagoryData = { id: categoryId }
                console.log(catagoryData);
                Swal.fire({
                    title: "Are you sure",
                    text: "You want to list/Unlist this catagory",
                    icon: "question",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtomColor: "#d33",
                    confirmButtonText: "Yes"

                }).then((decision) => {
                    if (decision.isConfirmed) {
                        $.ajax({
                            method: 'POST',
                            url: '/admin/listcategory',
                            data: JSON.stringify(catagoryData),
                            contentType: 'application/json',
                            success: function (response) {
                                if (response.isList === true) {
                                    $('#reloadArea').load('/admin/category #reloadArea')

                                } else {

                                }
                            }, error: function (error) {
                                console.log(error);
                            }
                        })
                    }

                })
            }




        </script>
