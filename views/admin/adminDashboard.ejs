                <script>
                    // Sample data for the pie chart
                    const delivered =  document.getElementById('delivered').value;
                    const cancelled =  document.getElementById('cancelled').value;
                    const placed =  document.getElementById('placed').value;
                    const returns =  document.getElementById('returns').value;
                    
                    const sahad = {
                        delivered : delivered,
                        cancelled : cancelled,
                        placed : placed,
                        returns : returns
                    };
                
                    const orderStatusData = {
                        labels: Object.keys(sahad),
                        datasets: [{
                            data: Object.values(sahad),
                            backgroundColor: ['#ffcc00', '#00cc99', '#ff6666', '#3366ff'] // Different colors for each segment
                        }]
                    };
                
                    // Initialize pie chart
                    const PieChart = document.getElementById('PieChart').getContext('2d');
                    new Chart(PieChart, {
                        type: 'pie',
                        data: orderStatusData,
                        options: {
                            // Customize options if needed
                        }
                    });
                </script>
