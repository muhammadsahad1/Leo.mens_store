  <%- include('../partials/sidenav.ejs') %>
</aside>
<main class="main-wrap">
  <header class="main-header navbar">
    <div class="col-search">
      <form class="searchform">
        <div class="input-group">
          <input
            list="search_terms"
            type="text"
            class="form-control"
            placeholder="Search term"
          />
          <button class="btn btn-light bg" type="button">
            <i class="material-icons md-search"></i>
          </button>
        </div>
      </form>
    </div>
    <div class="col-nav">
      <a href="/admin/logout"
        ><i class="btn btn-dark ms-3 rounded-pill">Logout</i></a
      >
      <button
        class="btn btn-icon btn-mobile me-auto"
        data-trigger="#offcanvas_aside"
      >
        <i class="material-icons md-apps"></i>
      </button>
      <ul class="nav">
        <li class="dropdown nav-item">
          <a
            class="dropdown-toggle"
            data-bs-toggle="dropdown"
            href="#"
            id="dropdownAccount"
            aria-expanded="false"
          >
            <img
              class="img-xs rounded-circle"
              src="/imgs/people/avatar-2.png"
              alt="User"
          /></a>
          <div
            class="dropdown-menu dropdown-menu-end"
            aria-labelledby="dropdownAccount"
          >
            <div class="dropdown-divider"></div>
            <a class="dropdown-item text-danger" href=""
              ><i class="material-icons md-exit_to_app"></i>Logout</a
            >
          </div>
        </li>
      </ul>
    </div>
  </header>


<div class="card-body">
  <div class="table-responsive">
    <table class="table align-middle table-nowrap mb-0">
      <thead class="table-light " >
        <tr>
          <th>Index</th>
          <th scope="col">Order Id</th>
          <th scope="col">Image</th>
          <th scope="col">User</th>
          <th scope="col">Price x quantity</th>
          <th scope="col">Total</th>
          <th scope="col">Date</th>
          <th scope="col">Payment Mode</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <%if(orders){%>
          <%orders.forEach((order)=>{%>
            <%order.products.forEach((product,i)=>{%>
              <%if(product.status === 'delivered'){%>
                <tr>
                  <td ><%= i+1 %></td>
                <td ><%=order._id %></td>
                <td ><img src="/img/product/sharp/<%=product.productsId.images[0] %>" alt="" style="width: 50px;"  ></td>
                <td ><%=order.userId.name%></td>
                <td ><%=product.productsId.price%> x <%=product.quantity%></td>
                <%const total = product.productsId.price * product.quantity%>
                <td ><%=total%></td>
                <% const formattedDate = order.date.toLocaleString('en-US', { weekday: 'short', month: 'short', day: 'numeric', year: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric', hour12: true }); %>
                <td ><%=formattedDate%></td>
                <td ><%=order.payment %></td>
                <td><%=product.status%></td>
              </tr>
              <%}%>
              <%})%>
              <% }) %>
              <%}else{%>
                <h2>No orders in this date</h2>
          <%}%>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="download-button-container" id="hide">
  <button class="download-button" onclick="downloadPdf()">Download Sales Report</button>
  <!-- <button class="btn-dark text-white border-0"><a href="/admin/adminDashboard">Back</a></button> -->
</div>


<script>
  let hide = document.getElementById('hide')
  function downloadPdf(){
    hideBtn()
     window.print();
    showhideBtn()
  }
  function hideBtn(){
    hide.style.display = 'none';
  }
  function showhideBtn(){
    hide.style.display = 'inline-block';
  }
</script>


