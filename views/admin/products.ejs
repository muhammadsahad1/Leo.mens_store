                    <h2 class="content-title card-title"  style="font-family: Arial, Helvetica, sans-serif; font-weight: bold;">Products List</h2>
                </div>
                <div>
                    <a href="/admin/addProducts" class="btn btn-dark ">Add Product</a>
                </div>
            </div>
            


                <div class="card-body">
                    <div class="table-responsive" id="reloadArea">
                        <table class="table table-hover">
                            <thead  style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-weight: bold;">
                                <tr>
                                    <th  style="background-color: rgb(22, 22, 22); color: aliceblue;" class="text-center">ID</th>
                                    <th  style="background-color: rgb(22, 22, 22); color: aliceblue;" class="text-center">Product name</th>
                                    <th  style="background-color: rgb(22, 22, 22); color: aliceblue;" class="text-center">Image</th>
                                    <th  style="background-color: rgb(22, 22, 22); color: aliceblue;" class="text-center">Category</th>

                                    <th  style="background-color: rgb(22, 22, 22); color: aliceblue;" class="text-center">Quantity</th>
                                    <th  style="background-color: rgb(22, 22, 22); color: aliceblue;" class="text-center">Price</th>
                                    <th  style="background-color: rgb(22, 22, 22); color: aliceblue;" class="text-center">Offer</th>
                                    <th  style="background-color: rgb(22, 22, 22); color: aliceblue;" class="text-center">Actions</th>
                                </tr>
                            </thead>


                            <% if(products) { %>
                                <% products.map(function(field, index) { %>
            
                                <tr> 
                                        <td align="center">
                                            <%= index+1 %>
                                        </td>
                                        <td align="center">
                                            <%= field.name %>
                                        </td>
                                        <td align="center"><img src='/assets/img/product/sharp/<%= field.images[0] %>' alt="Product-image" style="max-width: 50px; max-height: 50px;"></td>
                                        <td align="center">
                                            <%= field.categoriesId && field.categoriesId.name %>
                                          </td>
                                          
                                    
                                        <td align="center">
                                            <%= field.stockQuantity %>
                                        </td>
                                        
                                        <td align="center">
                                            <%= field.price %>
                                        </td>
                                        <td align="center">
                                            <a href="/admin/offerPage?id=<%= field._id %>" class="text-dark">
                                                <button class="btn btn-outline-primary block-button">Add</button></a>
                                        
                                        </td>
                                        <td align="center">
                                            <a href="/admin/editproducts?id=<%= field._id %>" class="text-dark">
                                                <button class="btn btn-outline-success block-button">Edit</button></a>
                                            <button class="btn btn-outline-primary block-button" data-user-id=""
                                                data-status="" onclick="listUnlist('<%= field.id %>')">
                                                <%= field.isListed ? "Unlist" : "list" %>
                                            </button>
                                        </td>

                                    </tr>
                                    <% }) %>
                                        <% } else { %>
                                            <tr>
                                                <td align="center"> No products available</td>
                                            </tr>
                                            <% } %>




                                                </tbody>
                        </table>
                        <!-- table-responsive.// -->
