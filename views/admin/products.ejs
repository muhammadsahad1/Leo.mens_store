        <script>


            function listUnlist(fieldId) {
                const productData = { id: fieldId }
                console.log(productData);
                Swal.fire({
                    title: "Are you sure",
                    text: "You want to list/Unlist this products",
                    icon: "question",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtomColor: "#d33",
                    confirmButtonText: "Yes"

                }).then((decision) => {
                    if (decision.isConfirmed) {
                        $.ajax({
                            method: 'POST',
                            url: '/admin/listproducts',
                            data: JSON.stringify(productData),
                            contentType: 'application/json',
                            success: function (response) {
                                if (response.listed === true) {
                                    $('#reloadArea').load('/admin/products #reloadArea')

                                } else {

                                }
                            }, error: function (error) {
                                console.log(error);
                            }
                        })
                    }

                })
            }
        </script>
